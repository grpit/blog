{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-typescript",
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "project": "../tsconfig.server.json",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/comma-dangle": "off"
    },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [
        ".js",
        ".ts"
      ]
    }
  }
}
